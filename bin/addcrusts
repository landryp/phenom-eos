#!/bin/bash

# ADDCRUSTS -- bash script to append crusts to all EoS files in input directory
# USAGE: addcrusts ./eos/dir/ ./out/dir/

indir=$1
basenm=$2
outdir=$3

tag="cr"

for file in ${indir}/${basenm}*.csv
do

	newname=$(echo $(basename "$file") | cut -f 1 -d '.')
	addcrust ${indir}/$(basename "$file") -o "${outdir}/${newname}${tag}.csv"
	
done
